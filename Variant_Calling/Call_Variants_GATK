
picard CreateSequenceDictionary R=Siirt_genome.fa O=Siirt_genome.dict

ls *_RD.bam | parallel \
    --jobs 6 \
    --plus \
    --progress  \
        	'gatk HaplotypeCaller \
                    --dont-use-soft-clipped-bases \
                    -R Siirt_genome.fa \
                    -I {} \
                    -O {.}.vcf'
